{{#dds/template-body auth=auth signout=true}}
  <div class="col-sm-30 col-sm-offset-3">
    <h3><b>Change your password</b></h3>
    <br>
    <p>
      {{dds/new-password
        wide=true
        tip="Passwords must be at least 8 characters long. Tip: create a password with 3 or more words â€“ it's secure and easy to remember."
        field=(mut password)
        confirm=true
        valid=(mut passwordValid)
        enter=(if (v-get this "isValid") (action "submit"))
      }}
    </p>
    {{#if apiError.email}}
      {{dds/validation-error float="right" type="error" message=apiError.email}}
    {{/if}}
    <div class="col-sm-36 col-md-24">
      <br>
      <p>
        <span class="float-right">
          {{dds/primary-button
            onClick=(action "submit")
            disabled=(v-get this "isInvalid")
            label="Change my password"
          }}
        </span>
      </p>
    </div>
  </div>
{{/dds/template-body}}
