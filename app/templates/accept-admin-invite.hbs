{{#dds/template-body auth=auth signout=true}}
  <div class="col-sm-30 col-sm-offset-3">
    <h3><b>Choose a password for your seller account</b></h3>
    <p>
    Once you join, we will initiate your seller account with prefilled information about your business.
    </p>
    <p>
      Already have an account? {{link-to "Sign in" "sign-in"}}.
    </p>
    <br>
    <p>
      {{dds/new-password
        wide=true
        tip="Passwords must be at least 8 characters long. Tip: create a password with 3 or more words â€“ it's secure and easy to remember."
        field=(mut password)
        confirm=true
        valid=(mut passwordValid)
        enter=(if (v-get this "isValid") (action "submit"))
      }}
    </p>
    {{#if apiError.email}}
      {{dds/validation-error float="left" type="error" message=apiError.email}}
    {{else if apiError.password}}
      {{dds/validation-error float="left" type="error" message=apiError.password}}
    {{/if}}
    <div class="col-sm-36 col-md-24">
      <br>
      <p> By creating an account you confirm your acceptance of the
        <a href="https://beta.buy.nsw.gov.au/terms-of-use" target="_blank" rel="noopener">terms of use</a>.
      </p>
      <p>
        <span class="float-right">
          {{dds/primary-button
            onClick=(action "submit")
            disabled=(v-get this "isInvalid")
            label="Continue"
          }}
        </span>
      </p>
    </div>
  </div>
{{/dds/template-body}}
