{{dds/skip-link}}

{{user-pretender}}

{{dds/template-header}}

<main id="content">
  <div class="au-body">
    {{#dds/template-body}}
      <br>
      <div class="row">
        <div class="col-sm-15">
          <p class="home-title">
            <big>
              <b>buy.nsw</b>
              is a place for buyers and suppliers of <b class="dark-blue">digital products and services</b> to connect
            </big>
            <br>
            <br>
            {{link-to "Learn more" "about-page" class="au-cta-link no-decoration"}}
            <!--
            <a class="au-cta-link no-decoration" href="https://vimeo.com/272480667" target="_blank">Learn more</a>
            -->
          </p>
        </div>
        <div class="col-sm-3">
        </div>
        <div class="col-sm-18 home-top-links">
          {{#if auth.user}}
            {{#if auth.isSeller}}
              {{#link-to "seller-dashboard"}}
                <p class="au-callout au-callout--home-top light">
                  <div class="right-arrow">
                    {{fa-icon "chevron-right"}}
                  </div>
                  <b>Go to your dashboard to continue with your supplier registration process</b>
                  <br>
                  <br>
                  {{link-to "Find out more about becoming a supplier" "seller-guide"}}
                </p>
              {{/link-to}}
            {{else}}
              <a class="pointer" onClick={{action "logout"}}>
                <p class="au-callout au-callout--home-top light">
                  <div class="right-arrow">
                    {{fa-icon "chevron-right"}}
                  </div>
                  <b>To become a supplier you should logout from your buyer account first</b>
                  <br>
                  <br>
                  <a class="pointer" onClick={{action "logout"}}>Sign out</a>
                </p>
              </a>
            {{/if}}
          {{else}}
            {{#link-to "signup" "seller"}}
              <p class="au-callout au-callout--home-top light">
                <div class="right-arrow">
                  {{fa-icon "chevron-right"}}
                </div>
                <b>Register to supply cloud products and services to NSW Government</b>
                <br>
                <br>
                {{link-to "Find out more about becoming a supplier" "seller-guide"}}
              </p>
            {{/link-to}}
          {{/if}}
          <br>
          {{#if auth.user}}
            {{#if auth.isBuyer}}
              {{#link-to "buyer-dashboard"}}
                <p class="au-callout au-callout--home-top">
                  <div class="right-arrow">
                    {{fa-icon "chevron-right"}}
                  </div>
                  <b>Go to your dashboard to continue with your buyer registration process</b>
                  <br>
                  <br>
                  {{link-to "Find out more about becoming a buyer" "buyer-guide"}}
                </p>
              {{/link-to}}
            {{else}}
              <a class="pointer" onClick={{action "logout"}}>
                <p class="au-callout au-callout--home-top">
                  <div class="right-arrow">
                    {{fa-icon "chevron-right"}}
                  </div>
                  <b>To become a buyer you should logout from your supplier account first</b>
                  <br>
                  <br>
                  <a class="pointer" onClick={{action "logout"}}>Sign out</a>
                </p>
              </a>
            {{/if}}
          {{else}}
            {{#link-to "signup" "buyer"}}
              <p class="au-callout au-callout--home-top">
                <div class="right-arrow">
                  {{fa-icon "chevron-right"}}
                </div>
                <b>Register to browse and buy cloud products and services for NSW Government</b>
                <br>
                <br>
                {{link-to "Find out more about becoming a buyer" "buyer-guide"}}
              </p>
            {{/link-to}}
          {{/if}}
        </div>
      </div>
    {{/dds/template-body}}
  </div>
  <div class="au-body au-body--alt">
    {{#dds/template-body}}
      <div class="row">
        <div class="col-sm-12">
          <div class="home-middle-box">
            <h6 class="au-display-lg"><b>Browse suppliers</b></h6>
            <div class="clear-both"></div>
            <hr class="light">
            <div class="highlight">
              {{#link-to "cloud-sellers"}}
                <b>Cloud suppliers</b>
              {{/link-to}}
            </div>
            <p>
              Weâ€™ll be adding more ICT categories as we grow.
            </p>
            <br>
            {{link-to "Find out more" "about-page" class="au-cta-link no-decoration"}}
          </div>
        </div>
        <div class="col-sm-12">
          <div class="home-middle-box">
            <h6 class="au-display-lg"><b>Browse cloud products</b></h6>
            <div class="clear-both"></div>
            <hr class="light">
            <div class="highlight">
              {{#link-to "cloud-search" "applications-software"}}
                <b>Cloud applications and software</b>
              {{/link-to}}
            </div>
            <p>
              Incl. accounting tools and customer management softwaere
            </p>
            <br>
            <div class="highlight">
              {{#link-to "cloud-search" "hosting-infrastructure"}}
                <b>Cloud hosting and infrastructure</b>
              {{/link-to}}
              </div>
            <p>
              Incl. website hosting and load balancing services
            </p>
          </div>
        </div>
        <div class="col-sm-12">
          <div class="home-middle-box">
            <h6 class="au-display-lg"><b>Supply cloud products</b></h6>
            <div class="clear-both"></div>
            <hr class="light">
            {{#unless auth.user}}
              <div class="highlight">
                {{#link-to "signup" "seller"}}
                  <b>Register to supply cloud products and services to NSW Government</b>
                {{/link-to}}
              </div>
              <p>
                Incl. cloud applications and software, hosting and infrastructure, and support services
              </p>
            {{/unless}}
            <br>
            <div class="highlight">
              {{#link-to "seller-guide"}}
                <b>Read the supplier guide</b>
              {{/link-to}}
              </div>
            <p>
              Learn how to become a supplier on buy.nsw
            </p>
          </div>
        </div>
      </div>
    {{/dds/template-body}}
  </div>
  <div class="au-body">
    {{#dds/template-body}}
      <br>
