            <hr class="light">
            <span class="date">25 Sep 2018</span>
          </div>
        </div>
      </div>
      <div>
        <div class="col-sm-27">
        </div>
        <div class="col-sm-9">
          <br>
          <br>
          <a target="_blank" href="https://www.digital.nsw.gov.au/blog?tag_id[96]=96" class="au-cta-link float-right no-decoration">
            View all blogs
          </a>
        </div>
        
      </div>
    {{/dds/template-body}}
  </div>
  {{dds/page-feedback}}
</main>
