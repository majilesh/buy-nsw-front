            )
          }}
        {{/ds/accordion-container}}
        <br>
        {{#ds/accordion-container title="Data per month" expanded=true}}
          {{ds/checkbox-array
            checkAll=true
            field=(mut dataPerMonth)
            wide=true
            items=(array
              (hash
                key="0mb"
                label="0MB"
              )
              (hash
                key="200mb"
                label="200MB"
