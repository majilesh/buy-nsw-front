            break=true
            wide=true
            items=(array
              (hash
                key="under-1000mbps"
                label="Under 1000 Mbps"
              )
              (hash
                key="1-10gbps"
                label="1-10 Gbps"
              )
              (hash
                key="10-50gbps"
                label="10-50 Gbps"
              )
              (hash
                key="50-100gbps"
                label="50-100 Gbps"
              )
              (hash
                key="over-100gbps"
                label="Over 100 Gbps"
              )
            )
          }}
        {{/ds/accordion-container}}
      {{/if}}
      {{#if (eq serviceTower "internet-services")}}
