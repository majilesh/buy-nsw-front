{{#ds/template-body}}
  {{ ds/bread-crumbs
    links=(array
      (hash name="buy.nsw" route="index")
      (hash name="Products and Services")
      (hash name="TPA")
    )
  }}
  <br>
  <div class="row">
    <div class="col-sm-4">
      <h2 class="au-display-xl underline-light">
        <b>TPA products</b>
      </h2>
    </div>
  </div>
  <br>
  <br>
  <div class="row">
    <div class="col-sm-4">
      <h2 class="au-display-lg">
        <b>Apply filters</b>
      </h2>
      <br>
      {{#ds/accordion-container title="Service towers" expanded=true collapsable=false}}
        {{ds/radio-group
          items=(array
            (hash
              key="all"
              label="All"
            )
            (hash
              key="fixed-data-services"
              label="Fixed data services"
            )
            (hash
              key="internet-services"
              label="Internet services"
            )
            (hash
              key="mobile-services"
              label="Mobile services"
            )
            (hash
              key="voice-services"
              label="Voice services"
            )
          )
          onChange=(action "changeServiceTower")
          field=(mut serviceTower)
        }}
      {{/ds/accordion-container}}
      <br>
      {{#ds/accordion-container title="Sellers" expanded=true}}
        {{ds/checkbox-array
          checkAll=true
          field=(mut sellers)
          break=true
          wide=true
          items=(array
            (hash
              key="dda"
              label="DDA"
            )
            (hash
              key="mynetfone"
              label="MyNetFone"
            )
            (hash
              key="optus"
              label="Optus"
            )
            (hash
              key="telstra"
              label="Telstra"
            )
            (hash
              key="tpg"
              label="TPG"
            )
            (hash
              key="transgrid"
              label="Transgrid"
            )
            (hash
              key="vertel"
              label="Vertal"
            )
            (hash
              key="vocus"
              label="Vocus"
            )
          )
        }}
      {{/ds/accordion-container}}
      {{#if (eq serviceTower "fixed-data-services")}}
        <br>
        {{#ds/accordion-container title="Fixed Data Services" expanded=true}}
          {{ds/checkbox-array
            checkAll=true
            field=(mut services)
            break=true
            wide=true
            items=(array
              (hash
                key="dark_fibre"
                label="P2P Dark Fibre"
              )
              (hash
                key="cwdm_dwdm"
                label="P2P CSDM / DWDM"
              )
              (hash
                key="fibre_channel"
                label="P2P Fibre Channel"
              )
              (hash
                key="l2vpn_ethernet"
                label="Unmanaged L2VPN"
              )
              (hash
                key="unmanaged_l3vpn"
                label="Unmanaged L3VPN"
              )
              (hash
                key="managed_l3vpn"
                label="Managed L3VPN"
              )
              (hash
                key="lowcost_l3vpn"
                label="Low-cost L3VPN"
              )
            )
          }}
        {{/ds/accordion-container}}
        <br>
        {{#ds/accordion-container title="Location" expanded=true}}
          {{ds/checkbox-array
            checkAll=true
            field=(mut locations)
            break=true
            wide=true
            items=(array
              (hash
                key="metro"
                label="Metro"
              )
              (hash
                key="regional"
                label="Regional"
              )
              (hash
                key="remote"
                label="Remote"
              )
            )
          }}
        {{/ds/accordion-container}}
        <br>
        {{#ds/accordion-container title="Bandwidth" expanded=true}}
          {{ds/checkbox-array
            checkAll=true
