              )
              (hash
                key="unlimited"
                label="Unlimited"
              )
            )
          }}
        {{/ds/accordion-container}}
        <br>
        {{#ds/accordion-container title="Number of devices" expanded=true}}
          {{ds/checkbox-array
            checkAll=true
            field=(mut numberOfDevices)
            break=true
            wide=true
            items=(array
              (hash
                key="1-10"
                label="1 - 10"
              )
              (hash
                key="10"
                label="10"
              )
              (hash
                key="100"
                label="100"
              )
