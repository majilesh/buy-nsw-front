<h3 class="au-display-md">Availability</h3>
<br>
{{#each items as |item|}}
  <div class="col-sm-3">
    {{checkbox-array
      name=item.key
      label=item.label
      field=(mut field)
    }}
  </div>
{{/each}}
{{#if (v-get this "field" "isInvalid")}}
  <div class="form-error">
    To add this product one of the above options have to be selected.
  </div>
{{/if}}
