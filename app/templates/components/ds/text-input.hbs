<div class="row">
  <div class="col-sm-4 text-input-label">
    <label for="text-input">
      {{label-text}}
      {{yield}}
    </label>
  </div>
  <div class="col-sm-8">
    {{input
      class=(if wide "au-text-input au-text-input--block" "au-text-input")
      value=(mut field)
      type=(if password "password" "text")
      disabled=disabled
      pattern=pattern
      enter=enter
    }}
  </div>
</div>
