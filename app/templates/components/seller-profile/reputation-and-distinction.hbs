{{#dds/accordion-container
  title="Licenses, accreditations, industry engagements and awards"
  subtitle="This is your opportunity to share some of the things you are proud of."
  subtitleBold="Tip:"
  theme="sapphire"
  expanded=false}}
  {{#if underEdit}}
    {{seller-profile/edit-save
      theme="sapphire"
      underEdit=(mut underEdit)
      form=form
    }} 
    {{seller-profile/reputation-and-distinction-edit form=form}}
  {{else}}
    <div class="row">
      {{#dds/info-box class="col-xs-18"}}
        {{fa-icon "info-circle" prefix="fas"}} Only available to registered buyers
      {{/dds/info-box}}
      {{seller-profile/edit-save
        class="col-xs-18"
        theme="sapphire"
        underEdit=(mut underEdit)
        form=form
      }} 
    </div>
    <div class="cool-infobox sapphire">
      You can add and update your accreditations, engagements and awards at any time.
    </div>
    {{seller-profile/reputation-and-distinction-view form=form buyerView=true}}
  {{/if}}
  {{seller-profile/edit-save
    theme="sapphire"
    underEdit=(mut underEdit)
    form=form
  }}
{{/dds/accordion-container}}
