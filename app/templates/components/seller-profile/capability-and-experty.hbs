{{#dds/accordion-container
  title="Special capabilities and expertise"
  subtitle="We recommend adding these details to your profile to increase your visibility and legitimacy to buyers."
  subtitleBold="Tip:"
  theme="sapphire"
  expanded=false}}
  {{#if underEdit}}
    {{seller-profile/edit-save
      theme="sapphire"
      underEdit=(mut underEdit)
      form=form
    }} 
    {{seller-profile/capability-and-experty-edit form=form}}
  {{else}}
    <div class="row">
      {{#dds/info-box class="col-xs-18"}}
        {{fa-icon "info-circle" prefix="fas"}} Only available to registered buyers
      {{/dds/info-box}}
      {{seller-profile/edit-save
        class="col-xs-18"
        theme="sapphire"
        underEdit=(mut underEdit)
        form=form
      }} 
    </div>
    <div class="cool-infobox sapphire">
      You can add and update your special capabilities and expertise at any time.
    </div>
    {{seller-profile/capability-and-experty-view form=form}}
  {{/if}}
  {{seller-profile/edit-save
    theme="sapphire"
    underEdit=(mut underEdit)
    form=form
  }}
{{/dds/accordion-container}}
