{{#dds/accordion-container
  title="Promotional video"
  subtitle="You can upload relevant video content here to provide buyers with project or business information."
  theme="sapphire"
  class="has-tip"
  expanded=false}}
  {{seller-profile/edit-save
    theme="sapphire"
    class="float-right"
    form=form
  }}
  <h5 class="au-display-md">
    <b class="sapphire">Embed a video</b>
  </h5>
  <p>
    Provide a youtube ID of your video
  </p>
  <p>
    {{dds/text-input
      field=(mut form.promotional_video)
      invalid=(v-get form 'promotional_video' 'isInvalid')
      errorMessage=(v-get form 'promotional_video' 'message')
      theme="sapphire"
      thin=true
      wide=true
      allRow=true
    }}
  </p>
  <p>
    {{seller-profile/edit-save
      theme="sapphire"
      form=form
    }}
  </p>
{{/dds/accordion-container}}
