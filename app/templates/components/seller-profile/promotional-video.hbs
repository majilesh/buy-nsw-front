{{#dds/accordion-container
  title="Promotional video"
  subtitle="Tip: You can upload relevant video content here to provide buyers with project or business information."
  theme="sapphire"
  expanded=false}}
  {{#if underEdit}}
    {{seller-profile/edit-save
      theme="sapphire"
      underEdit=(mut underEdit)
      form=form
    }}
    {{seller-profile/promotional-video-edit form=form}}
  {{else}}
    <div class="row">
      <p class="simple-alert simple-alert--greentick col-xs-18">Publicly viewable</p>
      <div class="col-xs-18">
        {{seller-profile/edit-save
          theme="sapphire"
          underEdit=(mut underEdit)
          form=form
        }}    
      </div>
    </div>
    <div class="cool-infobox sapphire">
      In this section you can upload a video of a recent case study or other informative content about your business.
    </div>
    {{seller-profile/promotional-video-view form=form}}
  {{/if}}
  {{seller-profile/edit-save
    theme="sapphire"
    underEdit=(mut underEdit)
    form=form
  }}
{{/dds/accordion-container}}
