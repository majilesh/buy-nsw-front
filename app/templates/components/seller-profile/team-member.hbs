{{#dds/accordion-container
  title="Team members"
  subline="Tip: Do you have team leads with specialist technical knowledge?"
  theme="sapphire"
  expanded=false}}
  <hr class="super-light">
  {{#if underEdit}}
    {{seller-profile/team-member-edit form=form}}
  {{else}}
    {{seller-profile/team-member-view form=form buyerView=true}}
  {{/if}}
  <p>
    {{seller-profile/edit-save
      theme="sapphire"
      underEdit=(mut underEdit)
      form=form
    }}
  </p>

{{/dds/accordion-container}}
