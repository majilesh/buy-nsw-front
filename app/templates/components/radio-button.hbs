<p>
  <br>
  <label class="au-control-input">
    <input
      class="au-control-input__input"
      type="radio"
      name={{name}}
      checked={{if (eq field value) "checked" "" }}
      onclick={{action (mut field) value}}
    >
    <span class="au-control-input__text">
      {{label}}
    </span>
  </label>
</p>
