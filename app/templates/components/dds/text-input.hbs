<div class="row">
  <div class={{if allRow "col-sm-36 text-input-label" "col-sm-12 text-input-label"}}>
    <label for="text-input">
      {{label-text}}
      {{yield}}
    </label>
  </div>
  <div class={{if allRow "col-sm-36" "col-sm-24"}}>
    {{input
      class=(if wide "au-text-input au-text-input--block" "au-text-input")
      value=(mut field)
      type=(if password "password" "text")
      disabled=disabled
      pattern=pattern
      focus-out=focusOut
      enter=enter
      placeholder=placeHolder
      autocomplete=(if noAutoComplete "new-password" "true")
    }}
  </div>
</div>
