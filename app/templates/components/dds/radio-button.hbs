{{#if isSimple}}
  <input
    id={{concat elementId '-radio'}}
    class="au-control-input__input"
    type="radio"
    checked={{if (eq field value) "checked" "" }}
    onClick={{action "selectRadio" value=value}}
  >
  <label for={{concat elementId '-radio'}} class="au-control-input__text">{{label}}</label>
{{else}}
  <label class="au-control-input">
    <input
      class="au-control-input__input"
      type="radio"
      checked={{if (eq field value) "checked" "" }}
      onClick={{action "selectRadio" value=value}}
    >
    <span class="au-control-input__text">
      {{label}}
    </span>
  </label>
{{/if}}