<nav
  class="au-main-nav au-main-nav--dark"
  id="#mainmenu"
  aria-label="main navigation"
>
  <div class="container-fluid">
    <div class="row">
      <div class="col-sm-36">
        <div class="au-main-nav__content">
          <div class="au-main-nav__menu" id="top">
            <div class="au-main-nav__menu-inner">
              <div class="au-main-nav__focus-trap-top"></div>
              <ul class="au-link-list">
                <li class={{if (eq currentPath "cloud-sellers") "active"}}>
                  {{ link-to "Supplier list" "cloud-sellers" }}
                </li>
                <li class={{if (eq currentPath "cloud-search") "active"}}>
                  {{ link-to "Cloud products" "cloud-search" "all" }}
                </li>
                <li class={{if (eq currentPath "help-page") "active"}}>
                  {{ link-to "Help" "help-page" }}
                </li>
                {{# if auth.isSeller }}
                  <li class={{if (eq currentPath "seller-dashboard") "active"}}>
                    {{ link-to "Dashboard" "seller-dashboard" }}
                  </li>
                {{else if auth.isBuyer }}
                  <li class={{if (eq currentPath "buyer-dashboard") "active"}}>
                    {{ link-to "Dashboard" "buyer-dashboard" }}
                  </li>
                {{/ if }}
                {{# if auth.isAdmin }}
                  <li><a href="/ops">Admin</a></li>
                {{/ if }}
              </ul>
              <div class="au-main-nav__focus-trap-bottom"></div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</nav>
