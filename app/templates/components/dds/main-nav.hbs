<nav
  class="au-main-nav au-main-nav--dark"
  id="#mainmenu"
  aria-label="main navigation"
>
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-12">
        <div class="au-main-nav__content" id="main-nav-default-dark">
          <div class="au-main-nav__menu">
            <div class="au-main-nav__menu-inner">
              <div class="au-main-nav__focus-trap-top"></div>
              <ul class="au-link-list">
                <li class={{if (eq currentPath "cloud-sellers") "active"}}>
                  {{ link-to "Seller list" "cloud-sellers" }}
                </li>
                <li class={{if (eq currentPath "seller-guide") "active"}}>
                  {{ link-to "Seller guide" "seller-guide" }}
                </li>
                <li class={{if (eq currentPath "buyer-guide") "active"}}>
                  {{ link-to "Buyer guide" "buyer-guide" }}
                </li>
                {{# if auth.isSeller }}
                  <li class={{if (eq currentPath "seller-dashboard") "active"}}>
                    {{ link-to "Dashboard" "seller-dashboard" }}
                  </li>
                {{else if auth.isBuyer }}
                  <li class={{if (eq currentPath "buyer-dashboard") "active"}}>
                    {{ link-to "Dashboard" "buyer-dashboard" }}
                  </li>
                {{/ if }}
                {{# if auth.isAdmin }}
                  <li><a href="/ops">Admin Ops</a></li>
                {{/ if }}
              </ul>
              <div class="au-main-nav__focus-trap-bottom"></div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</nav>
