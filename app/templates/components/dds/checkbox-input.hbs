<p class="thin-lines">
  <br>
  <label class="au-control-input">
    <input
      class="au-control-input__input"
      type="checkbox"
      onChange={{action "toggle"}}
      checked={{if field "checked" ""}}
      disabled={{if disabled "disabled" ""}}
    >
    <span class="au-control-input__text">
      <b>
        {{label}}
      </b>
    </span>
  </label>
</p>
{{#if description}}
  <p class="checkbox-description">
    {{description}}
  </p>
{{/if}}
{{#if (and displayError invalid)}}
  {{dds/validation-error type="error" message=errorMessage float="right"}}
{{else if (and apiError displayError)}}
  {{dds/validation-error type="warning" message=apiError float="right"}}
{{/if}}
