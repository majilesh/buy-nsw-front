{{#if isOptional}}
  <p class="optional">This field is optional</p>
{{/if}}
{{#each items as |item|}}
  {{dds/radio-button
    isSimple=isSimple
    value=item.key
    label=item.label
    field=(mut field)
    disabled=disabled
    onChange=(action "onChange")
  }}
{{/each}}
{{#if (and displayError invalid)}}
  {{dds/validation-error type="error" message=errorMessage isSimple=isSimple float="left"}}
{{else if (and apiError displayError)}}
  {{dds/validation-error type="warning" message=apiError isSimple=isSimple float="left"}}
{{/if}}
