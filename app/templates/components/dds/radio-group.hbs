{{#each items as |item|}}
  <div class="little-padding">
    {{dds/radio-button
      value=item.key
      label=item.label
      field=(mut field)
      disabled=disabled
      onChange=(action "onChange")
    }}
  </div>
{{/each}}
{{#if (and (or showError hasChanged) invalid)}}
  <span class="field-error error float-left">{{errorMessage}}</span>
  <div class="clear-both"></div>
{{else if (and (eq adminFeedback "rejected") (not hasChanged))}}
  <span class="field-error warning float-left">Changes requested upon your previous submission</span>
  <div class="clear-both"></div>
{{/if}}
