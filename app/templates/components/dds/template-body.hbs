<div class="container-fluid less-space">
  <div class="row">
    <div class="col-sm-12">
      {{#if (and signout auth.user)}}
        <div class="col-sm-3">
        </div>
        <div class="col-sm-6">
          {{logout-first}}
        </div> 
      {{else if (and signin (not auth.user))}}
        <div class="col-sm-3">
        </div>
        <div class="col-sm-6">
          {{login-first}}
        </div> 
      {{else}}
        {{yield}}
      {{/if}}
    </div>
  </div>
</div>
